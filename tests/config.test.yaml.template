global:
  chunking:
    size: 500
    overlap: 50
  embedding:
    model: text-embedding-3-small
    batch_size: 10  # Smaller batch size for tests
  logging:
    level: INFO
    format: json
    file: qdrant-loader-test.log

public_docs:
  test-docs:
    base_url: https://docs.python.org/3/tutorial/  # Using Python docs as test site
    version: "3.12"
    content_type: html
    exclude_paths:
      - /downloads
    selectors:
      content: .body
      remove:
        - nav
        - header
        - footer
      code_blocks: pre code

git_repos:
  # Local test repository for general testing
  test-repo:
    url: ./tests/fixtures/test-repo  # Use local test repository
    branch: main
    include_paths:
      - "README.md"
    exclude_paths: []
    file_types:
      - "*.md"
  
  # Remote repository for authentication testing
  auth-test-repo:
    url: https://github.com/test/authentication-test-repo.git  # Replace with actual test repository
    branch: main
    include_paths:
      - "src"
    exclude_paths:
      - "tests"
    file_types:
      - "*.md"
    auth:
      type: github
      token_env: GITHUB_TOKEN

confluence:
  test-space:
    url: "CONFLUENCE_URL_PLACEHOLDER"
    space_key: "CONFLUENCE_SPACE_KEY_PLACEHOLDER"
    content_types:
      - "page"
      - "blogpost"
    include_labels: []
    exclude_labels: []